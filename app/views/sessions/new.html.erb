<center><h1>Welcome to My City Weather</h1></center>


<form>
<div class="col-md-6 col-md-offset-3 login">
  <center><h3>Log in</h3></center>
<%= form_tag sessions_path, class: 'session-new' do %>

<div class="form-group">
<%= label_tag :username %> <%= text_field_tag :username, nil, class: 'form-control' %>
</div>
<div class="form-group">
<%= label_tag :password %> <%= password_field_tag :password, nil,  class: 'form-control' %>
</div>
<p>
  <center><%= submit_tag 'Log in', class: 'btn btn-info submit' %></center>
</p>
<p>
    <center><%= link_to 'sign up', new_users_path, class: 'btn btn-info submit' %></center>
</p>
<% end %>
</div>
</form>
